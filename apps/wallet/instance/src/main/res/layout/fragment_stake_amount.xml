<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.tonapps.tonkeeper.ui.component.BlurredScrollView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ignoreTopSystemOffset="true"
        app:ignoreBottomSystemOffset="false">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/offsetMedium"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/offsetMedium"
                android:orientation="vertical"
                android:background="@drawable/bg_content">


                <com.tonapps.tonkeeper.ui.component.AmountInputContainer
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/offsetMedium">
                </com.tonapps.tonkeeper.ui.component.AmountInputContainer>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="@dimen/offsetMedium"
                    android:background="@drawable/bg_island_border"
                    android:textColor="?attr/textSecondaryColor"
                    android:textAppearance="@style/TextAppearance.Body1" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginVertical="@dimen/offsetMedium"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/max"
                    style="@style/Widget.App.Button.Small.Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/max"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/available"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Body2"
                    android:gravity="end"
                    android:textColor="?attr/textSecondaryColor"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/unstake_hint"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_content"
                android:text="@string/staking_unstake_hint"
                android:padding="16dp"
                android:textAppearance="@style/TextAppearance.Body2"
                android:textColor="?attr/textSecondaryColor"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.tonapps.tonkeeper.ui.component.BlurredScrollView>
    <uikit.widget.FooterViewEmpty
        android:id="@+id/footer"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <uikit.widget.ColumnLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <com.tonapps.tonkeeper.fragment.staking.deposit.view.PoolSelectedView
                android:id="@+id/selected"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="76dp"/>
            <Button
                style="@style/Widget.App.Button"
                android:id="@+id/continue_action"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="bottom"
                android:textAppearance="@style/TextAppearance.Label1"
                android:textColor="?attr/textPrimaryColor"
                android:enabled="false"
                android:text="@string/continue_action"/>
        </uikit.widget.ColumnLayout>
    </uikit.widget.FooterViewEmpty>
</FrameLayout>