<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tonapps.tonkeeper.ui.component.BlurredScrollView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ignoreTopSystemOffset="true"
        app:ignoreBottomSystemOffset="false">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/offsetMedium"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_oval"
                android:backgroundTint="?attr/backgroundContentTintColor" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/action_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/staking_deposit"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.Body1"
                android:textColor="?attr/textSecondaryColor"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offsetExtraSmall"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.H2"
                android:textColor="?attr/textPrimaryColor"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/value_currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.Body1"
                android:textColor="?attr/textSecondaryColor"/>
            <com.tonapps.tonkeeper.view.TransactionDetailView
                android:id="@+id/wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offsetLarge"/>
            <com.tonapps.tonkeeper.view.TransactionDetailView
                android:id="@+id/recipient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.tonapps.tonkeeper.view.TransactionDetailView
                android:id="@+id/row_apy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.tonapps.tonkeeper.view.TransactionDetailView
                android:id="@+id/fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.tonapps.tonkeeper.ui.component.BlurredScrollView>
    <uikit.widget.FooterViewEmpty
        android:id="@+id/footer"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="bottom">
            <uikit.widget.SlideActionView
                android:id="@+id/slide"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/slide_to_confirm"/>
            <uikit.widget.ProcessTaskView
                android:id="@+id/process"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:successLabel="@string/done"
                app:errorLabel="@string/error"/>
        </FrameLayout>
    </uikit.widget.FooterViewEmpty>
</FrameLayout>