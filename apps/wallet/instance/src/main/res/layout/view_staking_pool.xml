<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon"
        fresco:roundAsCircle="true"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="start|center_vertical"
        android:background="@drawable/bg_oval"
        android:backgroundTint="?attr/backgroundContentTintColor"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.Label1"
            android:textColor="?attr/textPrimaryColor" />

        <com.tonapps.tonkeeper.ui.component.label.LabelView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/staking_max_apy_label"
            android:textColor="?attr/accentGreenColor"
            android:singleLine="true"
            android:visibility="gone"
            android:layout_marginStart="6dp"
        />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:textAppearance="@style/TextAppearance.Body2"
        android:textColor="?attr/textSecondaryColor" />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="6dp"
        android:layout_gravity="center_vertical|end"
        android:src="@drawable/ic_switch_16"
        android:tint="?attr/iconTertiaryColor">
    </androidx.appcompat.widget.AppCompatImageView>
</merge>