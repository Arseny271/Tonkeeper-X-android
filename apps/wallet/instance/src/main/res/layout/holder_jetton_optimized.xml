<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:padding="@dimen/offsetMedium"
    android:clipToPadding="false">
    <uikit.widget.FrescoView
        android:id="@+id/icon"
        fresco:roundAsCircle="true"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="start|center_vertical"
        android:background="@drawable/bg_oval"
        android:backgroundTint="?attr/backgroundContentTintColor"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginStart="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.Label1"
            android:textColor="?attr/textPrimaryColor" />
        <com.tonapps.tonkeeper.ui.component.label.LabelView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ton"
            android:singleLine="true"
            android:layout_marginStart="6dp"
            android:visibility="gone"
            android:textColor="?attr/textSecondaryColor"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/balance"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="end"
            android:singleLine="true"
            android:maxLength="12"
            android:textAppearance="@style/TextAppearance.Label1"
            android:textColor="?attr/textPrimaryColor"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.Body2"
            android:textColor="?attr/textSecondaryColor" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/balance_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.Body2"
            android:textColor="?attr/textSecondaryColor" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>